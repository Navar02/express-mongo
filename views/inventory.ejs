<table class="table table-striped">
    <thead class="thead-dark">
    <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Size</th>
        <th>Status</th>
        <th>ID</th>
    </tr>
    </thead>
    <% elements.forEach( element => { %>
        <tr>
            <td> <%= element.item %></td>
            <td> <%= element.qty %></td>
            <td> <%= JSON.stringify(element.size) %></td>
            <td> <%= element.status %></td>
            <td> <%= element._id %></td>
            <td><a href="./borrar/<%= element._id%>">Borrar</a>
            <a href="./editar/<%= element._id%>">Editar</a></td>
        </tr>
    <% }) %>
</table>
